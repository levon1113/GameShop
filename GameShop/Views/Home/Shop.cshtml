@using GameShop.Data.Entities;
@model IEnumerable<Game>

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Our Shop</h3>
                <span class="breadcrumb"><a href="#">Home</a> > Our Shop</span>
            </div>
        </div>
    </div>
</div>

<div class="section trending">
    <div class="container">
        <ul class="trending-filter">
            <li>
                <a class="is_active" href="#!" data-filter="*">Show All</a>
            </li>
            <li>
                <a href="#!" data-filter=".Action">Action</a>
            </li>
            <li>
                <a href="#!" data-filter=".Strategy">Strategy</a>
            </li>
            <li>
                <a href="#!" data-filter=".Sport">Sport</a>
            </li>
            <li>
                <a href="#!" data-filter=".Shooter">Shooter</a>
            </li>
            <li>
                <a href="#!" data-filter=".Adventure">Adventure</a>
            </li>
            <li>
                <a href="#!" data-filter=".Racing">Racing</a>
            </li>
        </ul>
        <div class="row trending-box">

        @if(Model!=null)
        foreach (Game item in Model)
        {
                    <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 @item.Genre" >
                    <div class="item">
                        <div class="thumb">
                                <a href="/Games/Details/@item.Id"><img style="width:300px;height:220px" src="@item.Image" alt=""></a>
                            <span class="price"><em>$36</em>$@item.Price</span>
                        </div>
                        <div class="down-content">
                            <span class="category">@item.Genre</span>
                            <h4>@item.Name</h4>
                            <a href="/Games/Details/@item.Id"><i class="fa fa-shopping-bag"></i></a>
                        </div>
                    </div>
                </div>
        }
        </div>

        
       
        
        
        
           
