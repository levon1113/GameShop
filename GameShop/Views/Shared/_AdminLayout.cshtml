@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>

        body {
            font-family: Arial, sans-serif;
        }


        .nav {
            background-color: #333;
            color: #fff;
            padding: 10px;
        }

            .nav ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .nav ul li {
                    display: inline;
                }

                    .nav ul li a {
                        color: #fff;
                        text-decoration: none;
                        padding: 10px;
                    }

                        .nav ul li a:hover {
                            background-color: #555;
                        }


        .content {
            padding: 20px;
        }

            .content h2 {
                margin-top: 0;
            }


        .section {
            margin-bottom: 30px;
        }

            .section h3 {
                margin-top: 0;
            }

            .section p {
                line-height: 1.5;
            }
    </style>
</head>
<body>
    <div class="nav">
        <ul>
            <li><a asp-controller="Games" asp-action="Index">Games</a></li>
            <li><a asp-controller="Makes" asp-action="Index">Makes</a></li>
            @*<li><a asp-controller="Games" asp-action="TopGames">Top Games</a></li>
            <li><a asp-controller="Games" asp-action="TrendingGames">Trending Games</a></li>*@
        </ul>
    </div>


</body>
</html>
@RenderBody()