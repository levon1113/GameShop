<div class="section trending">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h6>Trending</h6>
                    <h2>Trending Games</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="main-button">
                    <a asp-controller="Home" asp-action="Shop">View All</a>
                </div>
            </div>
            @foreach (Game item in Model["TrendingGames"])
            {
                <div class="col-lg-3 col-md-6">
                    <div class="item">
                        <div class="thumb">
                            <a href="Games/Details/@item.Id"><img style="width:300px;height:220px"src="@item.Image" alt=""></a>
                            <span class="price">$@item.Price</span>
                        </div>
                        <div class="down-content">
                            <span class="category">@item.Genre</span>
                            <h4>@item.Name</h4>
                            <a href="/Games/Details/@item.Id"><i class="fa fa-shopping-bag"></i></a>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>

<div class="section most-played">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h6>TOP GAMES</h6>
                    <h2>Most Played</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="main-button">
                    <a asp-controller="Home" asp-action="Shop">View All</a>
                </div>
            </div>
            @foreach (Game item in Model["TopGames"])
            {
                <div class="col-lg-2 col-md-6 col-sm-6">
                    <div class="item">
                        <div class="thumb">
                            <a href="Games/Details/@item.Id"><img style="width:300px;height:220px" src="@item.Image" alt=""></a>
                        </div>
                        <div class="down-content">
                            <span class="category">@item.Genre</span>
                            @*<h4>@item.Name</h4>*@
                            <a href="/Games/Details/@item.Id">Explore</a>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>



