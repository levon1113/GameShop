@model Game

<div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h3>@Model.Name</h3>
          <span class="breadcrumb"><a href="/Home/Index">Home</a>  >  <a href="/Home/Shop">Shop</a>  >  @Model.Name</span>
        </div>
      </div>
    </div>
  </div>

  <div class="single-product section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="left-image">
                    <img style="width:550px;height:560px" src="@Model.Image" alt="">
          </div>
        </div>
        <div class="col-lg-6 align-self-center">
          <h4>@Model.Name</h4>
          <span class="price">@Model.Price</span>
          <p>@Model.Description</p>
          <form id="qty" action="#">
            <input type="qty" class="form-control" id="1" aria-describedby="quantity" placeholder="1">
            <button type="submit"><i class="fa fa-shopping-bag"></i> ADD TO CART</button>
          </form>
          <ul>
            <li><span>Make:</span>@Model.Make.Name</li>
            <li><span>Genre:</span>@Model.Genre</li>
          </ul>
        </div>
        <div class="col-lg-12">
          <div class="sep"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="more-info">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="tabs-content">
            <div class="row">
              <div class="nav-wrapper ">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Description</button>
                  </li>
                 
                </ul>
              </div>              
              <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                  <p>@Model.Description</p>
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="section categories related-games">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="section-heading">
            <h6>Action</h6>
            <h2>Related Games</h2>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="main-button">
            <a href="/Home/Shop">View All</a>
          </div>
        </div>
            <div class="row trending-box">

        @if(ViewBag.RelGames.Count!=0)
        for(int i = 0;i<ViewBag.RelGames.Count;i++){
            Game item = ViewBag.RelGames[i];
                <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 @item.Genre">
                    <div class="item">
                        <div class="thumb">
                            <a href="product-details.html"><img src="@item.Image" alt=""></a>
                            <span class="price"><em>$36</em>$@item.Price</span>
                        </div>
                        <div class="down-content">
                            <span class="category">@item.Genre</span>
                            <h4>@item.Name</h4>
                            <a href="/Games/Details/@item.Id"><i class="fa fa-shopping-bag"></i></a>
                        </div>
                    </div>
                </div>
        }        
        </div>
        
      </div>
    </div>
  </div>